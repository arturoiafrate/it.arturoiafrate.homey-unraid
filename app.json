        "large": "/drivers/unraid-driver/assets/images/large.png",
        "xlarge": "/drivers/unraid-driver/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "unraid-driver",
      "settings": [
