        },
        {
          "id": "username",
          "type": "text",
          "label": {
            "en": "Username"
          },
          "value": "",
          "hint": {
            "en": "The username to login to Unraid Server"
          }
        },
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password"
          },
          "value": "",
