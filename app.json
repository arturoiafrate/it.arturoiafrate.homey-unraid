          }
        },
        {
          "id": "checkInterval",
          "type": "number",
          "label": {
            "en": "Check Interval"
          },
          "value": 6,
          "hint": {
            "en": "The interval in seconds to check unraid server changes. Default: 6"
          }
        }
      ]
    }
  ],
